<Context path="/AgenceVoyageServlets" 
        debug="5" reloadable="true" crossContext="true">

  <Logger className="org.apache.catalina.logger.FileLogger"
             prefix="localhost_AgenceVoyageServlets_log." suffix=".txt"
             timestamp="true"/>

  <Resource name="jdbc/BoVoyageDS"
        	auth="Container"
        	type="javax.sql.DataSource"
			driverClassName="org.postgresql.Driver"
			url="jdbc:postgresql://localhost:5432/bovoyages"
			username="bovoyages"
			password="bovoyages"/>
</Context>
